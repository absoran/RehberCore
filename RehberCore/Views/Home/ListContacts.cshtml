@model List<Contact>
@{
    ViewData["Title"] = "ListContacts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rehber</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" cellspacing="1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].LastName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> <br /> 
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="AddNumber" asp-route-id="@item.Id">Add New Number</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
